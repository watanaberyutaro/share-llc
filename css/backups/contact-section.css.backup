/* Contact Section Styles - Dynamic & Impressive Design */

/* Contact Block Structure */
.topContact,
.topContact.topBlock,
section.topContact {
    background-color: #333333 !important;
    background-image: none !important;
    background: #333333 !important;
    position: relative;
    overflow: hidden;
}

/* Contact Content */
.topContact__inner {
    position: relative;
    display: flex !important;
    gap: 80px !important;
    align-items: center !important;
    z-index: 1;
}

/* Contact Title and Message */
.contact-message {
    flex: 1 !important;
    min-width: 0;
}

.contact-message h2 {
    font-size: 5rem !important;
    font-weight: 900 !important;
    color: #ffffff !important;
    line-height: 1.2 !important;
    margin-bottom: 30px !important;
}

.contact-message h2 a {
    display: inline-flex !important;
    align-items: center !important;
    gap: 20px !important;
    text-decoration: none !important;
    color: #ffffff !important;
    transition: opacity 0.3s ease !important;
}

.contact-message h2 a:hover {
    opacity: 0.7;
}

/* Circle Arrow Button */
.contact-message .btn-arrows {
    width: 78px !important;
    height: 78px !important;
    max-width: 78px !important;
    max-height: 78px !important;
}

.contact-message .btn-arrows .cls-1 {
    fill: none !important;
    stroke: #ffffff !important;
    stroke-miterlimit: 10 !important;
    stroke-width: 1.5 !important;
}

.contact-message .btn-arrows .cls-2 {
    fill: #ffffff !important;
}

/* Contact Description */
.contact-message .description {
    font-size: 20px !important;
    color: rgba(255,255,255,0.8) !important;
    line-height: 1.8 !important;
    margin-bottom: 50px !important;
    font-weight: 400;
}

/* CTA Cards */
.contact-cta-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin-bottom: 40px;
}

.cta-card {
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 20px;
    padding: 30px;
    transition: background 0.3s ease;
}

.cta-card:hover {
    background: rgba(255,255,255,0.08);
}

.cta-card .card-icon {
    display: none;
}

.cta-card .card-content h3 {
    font-size: 18px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 15px;
    letter-spacing: 0.02em;
}

.cta-card .card-main-text {
    font-size: 22px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 10px;
    letter-spacing: 0.05em;
}

.cta-card .card-sub-text {
    font-size: 14px;
    color: rgba(255,255,255,0.8);
    margin-bottom: 8px;
    line-height: 1.6;
}

.cta-card .card-hours {
    font-size: 13px;
    color: rgba(255,255,255,0.7);
    font-weight: 500;
}

/* Contact Form Button */
.contact-form-button {
    margin-top: 20px;
}

.btn-contact-large {
    display: inline-flex;
    align-items: center;
    justify-content: space-between;
    gap: 30px;
    padding: 25px 45px;
    background: #ffffff;
    color: #000000;
    text-decoration: none;
    border-radius: 60px;
    font-weight: 700;
    font-size: 20px;
    transition: opacity 0.3s ease;
}

.btn-contact-large:hover {
    opacity: 0.8;
}

.btn-contact-large .btn-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(0,0,0,0.05);
    border-radius: 50%;
}

.btn-contact-large .btn-icon svg {
    width: 24px;
    height: 24px;
}

/* Contact Visual Section */
.contact-visual {
    width: 500px;
    flex-shrink: 0;
    position: relative;
}

/* Visual Decoration */
.visual-decoration {
    display: none;
}

/* Contact Info Card */
.contact-info-card {
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 20px;
    padding: 40px;
}

.info-section {
    margin-bottom: 35px;
    padding-bottom: 35px;
    border-bottom: 1px solid rgba(255,255,255,0.15);
}

.info-section:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
}

.info-section h4 {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 16px;
    font-weight: 700;
    color: rgba(255,255,255,0.9);
    margin-bottom: 15px;
    letter-spacing: 0.05em;
    text-transform: uppercase;
}

.info-section h4 i {
    font-size: 20px;
    color: rgba(255,255,255,0.8);
}

.info-section p,
.info-section address {
    font-size: 16px;
    color: #ffffff;
    line-height: 1.8;
    margin: 0;
    font-style: normal;
    font-weight: 400;
}

/* Override conflicting SVG styles */
.contact-message svg {
    max-width: none !important;
    max-height: none !important;
    width: 78px !important;
    height: 78px !important;
    margin-left: 0 !important;
    vertical-align: initial !important;
}

/* Mobile Responsive */
@media (max-width: 768px) {
    .topContact__inner {
        flex-direction: column !important;
        gap: 50px !important;
    }

    .contact-message h2 {
        font-size: 36px !important;
    }

    .contact-message .btn-arrows {
        width: 50px !important;
        height: 50px !important;
    }

    .contact-message svg {
        width: 50px !important;
        height: 50px !important;
    }

    .contact-message .description {
        font-size: 16px !important;
    }

    .contact-cta-cards {
        grid-template-columns: 1fr;
        gap: 15px;
    }

    .cta-card {
        padding: 25px;
    }

    .btn-contact-large {
        width: 100%;
        padding: 20px 30px;
        font-size: 18px;
    }

    .contact-visual {
        width: 100%;
    }

    .contact-info-card {
        padding: 35px;
    }
}

/* Tablet Responsive */
@media (max-width: 1024px) and (min-width: 769px) {
    .contact-message h2 {
        font-size: 4rem !important;
    }

    .contact-visual {
        width: 400px;
    }

    .contact-info-card {
        padding: 40px;
    }
}

/* Desktop specific adjustments */
@media (min-width: 769px) {
    .topContact {
        display: flex;
    }

    .topContact .block-content {
        padding: 100px 60px 120px 60px;
        flex: 1;
        border-left: 1px solid rgba(255,255,255,0.15);
    }

    .topContact .block-label {
        width: 100px !important;
        padding: 100px 20px !important;
        writing-mode: vertical-rl !important;
        text-orientation: mixed !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
        background: transparent !important;
        border: none !important;
    }

    .topContact .block-label label {
        transform: rotate(180deg);
        font-size: 14px !important;
        font-weight: 700 !important;
        letter-spacing: 0.2em !important;
        color: #999999 !important;
        text-transform: uppercase;
    }
}